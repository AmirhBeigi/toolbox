{
  "name": "@fullstacksjs/toolbox",
  "version": "1.4.0",
  "license": "MIT",
  "author": "frontendmonster <frontendmonster@gmail.com>",
  "description": "Common JavaScript utility functions",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fullstacksjs/utils.git"
  },
  "files": [
    ".npmrc",
    ".npmignore",
    "README.md",
    "LICENSE",
    ".husky/prepare"
  ],
  "main": "./cjs/index.js",
  "module": "./esm5/index.js",
  "es2015": "./esm2015/index.js",
  "typings": "./types/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "commit": "git-cz",
    "clean": "shx rm -rf lib/*",
    "prebuild": "npm run clean",
    "build": "tsc && tsc --project ./tsconfig.es2015.json && tsc --project ./tsconfig.cjs.json",
    "lint": "eslint src --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:ci": "jest --ci --coverage --coverageReporters='text' --coverageReporters='text-summary'",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "release": "standard-version && git push --follow-tags && builder --ignoreVersioning --publish",
    "verify": "npm run lint && npm run test",
    "prepublishOnly": "pinst --disable && pkg-ok",
    "postpublish": "pinst --enable",
    "prepare": ".husky/prepare"
  },
  "devDependencies": {
    "@frontendmonster/builder": "2.2.0",
    "@fullstacksjs/eslint-config": "6.4.0",
    "@types/jest": "26.0.24",
    "@types/node": "16.4.10",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.32.0",
    "husky": "7.0.1",
    "jest": "27.0.6",
    "lint-staged": "11.1.1",
    "pinst": "2.1.6",
    "pkg-ok": "2.3.1",
    "prettier": "2.3.2",
    "shx": "0.3.3",
    "standard-version": "9.3.1",
    "ts-jest": "27.0.4",
    "typescript": "4.3.5"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
